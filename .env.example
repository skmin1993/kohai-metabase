# Metabase Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration - Using Neon PostgreSQL (Recommended)
# Get your connection string from: https://console.neon.tech/
MB_DB_TYPE=postgres
MB_DB_CONNECTION_URI=postgresql://username:password@ep-xxx-xxx.region.neon.tech/neondb?sslmode=require

# Alternative: Individual Database Parameters (if not using connection URI)
# MB_DB_HOST=ep-xxx-xxx.region.neon.tech
# MB_DB_PORT=5432
# MB_DB_DBNAME=neondb
# MB_DB_USER=your_username
# MB_DB_PASS=your_password

# Server Configuration
PORT=3000
MB_JETTY_PORT=3000

# Timezone
JAVA_TIMEZONE=UTC

# Optional: Email Configuration (for notifications)
# MB_EMAIL_SMTP_HOST=smtp.gmail.com
# MB_EMAIL_SMTP_PORT=587
# MB_EMAIL_SMTP_USERNAME=your_email@gmail.com
# MB_EMAIL_SMTP_PASSWORD=your_password
# MB_EMAIL_FROM_ADDRESS=your_email@gmail.com

# Optional: Site URL (recommended for production)
# MB_SITE_URL=https://your-metabase-app.onrender.com
